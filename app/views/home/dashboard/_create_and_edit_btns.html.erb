<div class="d-flex justify-content-center <%= current_user.self? ? 'flex-sm-column' : 'flex-row' %>">
  <div class="profile-bk-edit-btn p-2">
    <%= link_to profile_info_marriage_profile_path(current_active_profile),
                class: 'btn btn-sm btn-warning text-white' do %>
      <i class="fas fa-edit"></i> Edit Profile
  <% end %>
  </div>
  <% unless current_user.self? || current_user.other_as_matchmaker? %>
    <div class="profile-bk-edit-btn p-2">
      <%= link_to new_marriage_profile_path, class: 'btn btn-sm btn-warning text-white' do %>
        <i class="fas fa-plus-circle"></i> Add Profile
      <% end %>
    </div>
  <% end %>
</div>