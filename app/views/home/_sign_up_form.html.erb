<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="wrap-input100 m-b-10 validate-input" data-validate = "Name is required">
    <%= f.text_field :name,
                     class: 's2-txt1 placeholder0 input100',
                     placeholder: 'Full Name' %>
    <span class="focus-input100"></span>
  </div>

  <div class="wrap-input100 m-b-20 validate-input" data-validate = "Email is required: ex@abc.xyz">
    <%= f.text_field :email,
                     type: 'Email',
                     class: 's2-txt1 placeholder0 input100',
                     placeholder: 'Email Address'%>
    <span class="focus-input100"></span>
  </div>

  <div class="wrap-input100 m-b-20 validate-input" data-validate = "Email is required: ex@abc.xyz">
    <%= f.text_field :phone_number,
                     type: 'phone',
                     class: 's2-txt1 placeholder0 input100',
                     placeholder: 'Mobile Number' %>
    <span class="focus-input100"></span>
  </div>

  <div class="wrap-input100 m-b-20 validate-input" data-validate = "Email is required: ex@abc.xyz">
    <%= f.text_field :password, type: 'password',
                     class: 's2-txt1 placeholder0 input100',
                     placeholder: 'Password', required: true %>
    <span class="focus-input100"></span>
  </div>

  <div class="wrap-input100 m-b-20 validate-input" data-validate = "Email is required: ex@abc.xyz">
    <%= f.text_field :password_confirmation, type: 'password',
                     class: 's2-txt1 placeholder0 input100',
                     placeholder: 'Reconfirm Password', required: true %>
    <span class="focus-input100"></span>
  </div>
<!--  <p class="sm-text">(These information will <b>never</b> be disclosed to anyone through the platform)</p>-->
  <div class="w-full">
    <%= f.submit 'REGISTER FREE', class: 'flex-c-m s2-txt2 size4 bg6 bor1 hov1 trans-04 merriweather' %>
  </div>

<% end %>