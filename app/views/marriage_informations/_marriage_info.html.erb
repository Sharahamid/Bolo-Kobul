<div class="panel-group">
  <div class="panel p-2 default-background white-background">
    <div class="info-yellow-line"></div>
    <div class="panel-heading">
      <div class="d-flex flex-row">
        <div class=" flex-fill pl-2 pt-1">
          <strong class=""> Marriage Information </strong>
        </div>
        <div class="align-self-end pr-2">
          <a data-toggle="collapse" href="#collapse_marriage_information" class="align-self-end text-white">
            <i class="fas fa-caret-down"></i>
          </a>
        </div>
      </div>
    </div>
    <div id="collapse_marriage_information" class="panel-collapse collapse p-2 detail-info">
      <% if marriage_profile.id == current_active_profile.id %>
        <div class="edit-info-btn">
          <a href="<%= marriage_profile.marriage_information.present? ? edit_marriage_information_path(marriage_profile.marriage_information) : new_marriage_information_path %>" data-remote="true" data-toggle="tooltip" data-placement="top" title="Edit information" class="btn btn-sm btn-edit text-white mr-2 js-mi-edit">
            <i class="fa fa-pencil"></i>
          </a>
        </div>
      <% end %>
      <% if marriage_profile.marriage_information.present? || marriage_profile.id == current_active_profile.id %>
        <div class="panel-body border-top">
          <div class="d-sm-flex flex-sm-row info-alignment">
            <table class=" flex-fill pr-3 table table-borderless table-responsive">
              <tbody>
                <% if !marriage_profile.marriage_information&.have_children.nil? || marriage_profile.id == current_active_profile.id %>
                  <tr>
                    <td> Do You Have Children ?</td>
                    <td> :</td>
                    <td>
                      <% if marriage_profile.marriage_information&.have_children.nil? %>
                        &nbsp;
                      <% else %>
                        <%= marriage_profile.marriage_information&.have_children ? 'Yes' : 'No' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>

                <% if marriage_profile.marriage_information&.no_of_childrens.present? || marriage_profile.id == current_active_profile.id %>
                  <tr>
                    <td> No Of Children</td>
                    <td> :</td>
                    <td><%= marriage_profile&.marriage_information&.no_of_childrens || '' %></td>
                  </tr>
                <% end %>

                <% if !marriage_profile.marriage_information&.want_more_child.nil? || marriage_profile.id == current_active_profile.id %>
                  <tr>
                    <td> Do You Want (more) Children?</td>
                    <td> :</td>
                    <td>
                      <% if marriage_profile.marriage_information&.want_more_child.nil? %>
                        &nbsp;
                      <% else %>
                        <%= marriage_profile.marriage_information&.want_more_child ? 'Yes' : 'No' %>
                      <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <table class=" flex-fill pr-3 table table-borderless table-responsive ">
              <tbody>
                <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <%= render 'shared/no_data_found' %>
      <% end %>
    </div>
  </div>
</div>