<div class="card card-plain">
  <div class="card-header" role="tab" id="heading_<%= about.id %>">
    <a data-toggle="collapse" data-parent="#accordion"
       href="#collapse_<%= about.id %>"
       aria-expanded="<%= about.id == @about_content.first.id ? true : false %>"
       aria-controls="collapse_<%= about.id %>">
      <%= about.content_type %><i class="fa fa-angle-down pt-1" aria-hidden="<%=
      about.id == @about_content.first.id ? true : false %>"></i>
    </a>
  </div>
  <div id="collapse_<%= about.id %>"
       class="collapse <%= about.id== @about_content.first.id ? 'show' : '' %>"
       role="tabpanel" aria-labelledby="heading_<%= about.id %>">
    <div class="card-body">
      <%= about.content.html_safe %>
    </div>
  </div>
</div>
