          <% User::FAVOURITE_CUISINE.each do |value, id| %>
            <label class="check-box-lbl-item">
              <%= check_box_tag "hobbies_and_interest[cuisine][]",
                                id,
                                checked_cuisine(id) %>
              <span class="ck-box-lbl" title="<%= value %>" data-toggle='tooltip' data-placement="top">
              <%= value.to_s %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :travel, 'Travel : ' %><br/>
        <div class="d-sm-flex flex-sm-row flex-wrap">
          <% User::TRAVEL.each do |value, id| %>
            <label class="check-box-lbl-item">
              <%= check_box_tag "hobbies_and_interest[travel][]",
