<%= form_for hobbies_and_interest, remote: true do |f| %>
  <!-- Modal Header -->
  <%= render 'shared/modal_header', title: 'Hobbies And Interest' %>

  <!-- Modal body -->
  <div class="modal-body">
    <div class="form_input_fields pl-2 pr-2">

      <div class="form-group">
        <%= f.label :hobby, 'Hobby:' %><br/>
        <div class="d-sm-flex flex-sm-row flex-wrap">
          <% User::HOBBIES.each do |value, id| %>
            <label class="check-box-lbl-item">
              <%= check_box_tag "hobbies_and_interest[hobby][]",
                                id,
                                checked_hobby(id) %>
              <span class="ck-box-lbl" title="<%= value %>" data-toggle='tooltip' data-placement="top">
              <%= value.to_s %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :interest, 'Interest:' %><br/>
        <div class="d-sm-flex flex-sm-row flex-wrap">
          <% User::INTEREST.each do |value, id| %>
            <label class="check-box-lbl-item">
              <%= check_box_tag "hobbies_and_interest[interest][]",
                                id,
                                checked_interest(id) %>
              <span class="ck-box-lbl" title="<%= value %>" data-toggle='tooltip' data-placement="top">
              <%= value.to_s %>
              </span>
            </label>

          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :music, 'Music :' %><br/>
        <div class="d-sm-flex flex-sm-row flex-wrap">
          <% User::FAVOURITE_MUSIC.each do |value, id| %>
            <label class="check-box-lbl-item">
              <%= check_box_tag "hobbies_and_interest[music][]",
                                id,
                                checked_music(id) %>
              <span class="ck-box-lbl" title="<%= value %>" data-toggle='tooltip' data-placement="top">
              <%= value.to_s %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.text_field :favourite_song,
                         placeholder: 'Favourite Song?',
                         class: 'form-control',
                         title: 'Favourite Song?',
                         data: {toggle: 'tooltip', placement: 'top'} %>
      </div>

      <div class="form-group">
        <%= f.label :read, 'Read :' %><br/>
        <div class="d-sm-flex flex-sm-row flex-wrap">
          <% User::FAVOURITE_BOOK.each do |value, id| %>
            <label class="check-box-lbl-item">
