<div class="col-md-12 px-0 my-4 blog-section">
  <a href="<%= blog_path blog %>">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4 p-2 blog-cover">
          <%= image_tag "#{blog.image_url.present? ?
                               blog.image_url : 'bg01.jpg'}",
                        class: 'blog-img img-responsive', width: '100%' %>
        </div>
        <div class="col-md-8 p-2 pr-3 blog-details">
          <div class="blog-title">
            <%= blog.title %>
          </div>
          <div class="blog-text">
            <%=raw blog.story %>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
