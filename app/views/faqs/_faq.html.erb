<div class="card card-plain">
  <div class="card-header" role="tab" id="heading_<%= faq.id %>">
    <a data-toggle="collapse" data-parent="#accordion"
       href="#collapse_<%= faq.id %>"
       aria-expanded="<%= faq.id==@faqs.first.id ? true : false %>"
       aria-controls="collapse_<%= faq.id %>">
      <%= faq.title %><i class="fa fa-angle-down pt-1" aria-hidden="<%=
      faq.id==@faqs.first.id ? true : false %>"></i>
    </a>
  </div>
  <div id="collapse_<%= faq.id %>"
       class="collapse <%= faq.id==@faqs.first.id ? 'show' : '' %>"
       role="tabpanel" aria-labelledby="heading_<%= faq.id %>">
    <div class="card-body">
      <%= faq.content.html_safe %>
    </div>
  </div>
</div>
