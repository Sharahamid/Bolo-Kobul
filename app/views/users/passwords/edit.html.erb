<div class="container-fluid p-0">
  <div class="container">
    <div class="basic_info">
      <div class="basic-info-mandala">
        <%= image_tag 'mandala.svg', class: 'img-responsive' %>
      </div>
      <div class="d-flex flex-column align-items-center">
        <div class="internal_form_heading align-self-center">
          <strong> Change Your Password </strong>
        </div>

        <div class="form_input_fields pt-4 pl-2 pr-2">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
            <div class="form-group">
              <%= f.hidden_field :reset_password_token %>
              <%= f.password_field :password,
                                   autofocus: true,
                                   autocomplete: "password",
                                   class: 'form-control sign_up-input-field',
                                   placeholder: 'New Password*',
                                   required: true,
                                   data: {toggle: "tooltip", placement: "top"},
                                   title: "New Password*" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation,
                                   autocomplete: "off",
                                   class: 'form-control sign_up-input-field',
                                   placeholder: 'Confirm New Password*',
                                   required: true,
                                   data: {toggle: "tooltip", placement: "top"},
                                   title: "Confirm New Password*" %>
            </div>

            <div class="form-group">
              <div class="register-btn-section text-center">
                <button type="submit" class="btn btn-sign_up form-control"> Change My Password</button>
              </div>
            </div>

            <%= render "users/shared/links" %>
          <% end %>
        </div>

      </div>

    </div>
  </div>
</div>