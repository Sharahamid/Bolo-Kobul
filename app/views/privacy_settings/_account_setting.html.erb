<div class="right-section mb-4">
  <div class="d-flex flex-column dashboard-tab">
    <div class="d-flex flex-row white-background text-gray p-3 border-bottom">
      <div class="col-12">
        <div class="row">
          <div class="col-4">
            Email
          </div>
          <div class="col-4 content-wrap">
            <%= current_user&.email %>
          </div>
          <div class="col-4">
            <i class="fa fa-user-lock float-right btn btn-sm btn-warning text-white"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row white-background text-gray p-3 border-bottom">
      <div class="col-12">
        <div class="row">
          <div class="col-4">
            Phone
          </div>
          <div class="col-4 content-wrap">
            <%= current_user&.phone_number %>
          </div>
          <div class="col-4">
            <i class="fa fa-user-lock float-right btn btn-sm btn-warning text-white"> </i>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row white-background text-gray p-3 border-bottom">
      <div class="col-12">
        <div class="row">
          <div class="col-4">
            Password
          </div>
          <div class="col-4 content-wrap">
            ********
          </div>
          <div class="col-4 content-wrap">
            <%= link_to change_password_user_path(current_user),
                        remote: true,
                        title: 'Change Your Password',
                        data: {toggle:'tooltip', placement:'top'},
                        class: ' btn btn-sm btn-warning float-right text-white' do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex flex-row white-background text-gray p-3 border-bottom">
      <div class="col-12">
        <div class="row">
          <div class="col-4 content-wrap">
            Text Alert
            <div>* Cost:&nbsp;
              <b>
                <%= pluralize(@text_alert_butterflies,"Butterfly")%>
              </b>
            </div>
          </div>
          <div class="col-4">
            <%= current_user.text_alert.titleize %>
          </div>
          <div class="col-4">
            <%= link_to toggle_text_alert_user_path(current_user),
                        method: :patch,
                        title: "#{current_user.text_alert == "on" ?
                                      "Turn 'Off' Text Alerts, You have to use
                                      Butterfly again to turn it 'On'!" :
                                      "Turn 'On' Text Alerts"}",
                        data: {toggle:'tooltip', placement:'top'},
                        class: ' btn btn-sm btn-warning float-right text-white' do %>
              <% if current_user.text_alert == "on" %>
                <i class="fa fa-toggle-on"></i>
              <% else %>
                <i class="fa fa-toggle-off"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex flex-row white-background text-gray p-3 border-bottom">
      <div class="col-12">
        <div class="row">
          <div class="col-4 content-wrap">
            Advanced Search
            <div>* Cost:&nbsp;
              <b>
                <%= pluralize(@adv_search_butterflies,"Butterfly")%>
              </b>
            </div>
          </div>
          <div class="col-4">
            <%= current_user.advanced_search.titleize %>
          </div>
          <div class="col-4">
            <%= link_to toggle_advanced_search_user_path(current_user),
                        method: :patch,
                        title: "#{current_user.advanced_search == "disabled" ?
                                      "'Disable' Advanced Search, You have to use
                                      Butterfly again to 'Enable' it!" :
                                      "'Enable' Advanced Search"}",
                        data: {toggle:'tooltip', placement:'top'},
                        class: ' btn btn-sm btn-warning float-right text-white' do %>
              <% if current_user.advanced_search == "enabled" %>
                <i class="fa fa-toggle-on"></i>
              <% else %>
                <i class="fa fa-toggle-off"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex flex-row white-background text-gray p-3 border-bottom">
      <div class="col-12">
        <div class="row">
          <div class="col-4 content-wrap">
            Hide/Deactivate Account
          </div>
          <div class="col-4 content-wrap">
            <% if current_user.deactivated.present? %>
              <i class="fas fa-ban text-danger">  </i>
              Deactivated
            <% else %>
              <i class="fas fa-check-circle text-warning"> </i>
              Active
            <% end %>

          </div>
          <div class="col-4 content-wrap">
            <%= link_to current_user.deactivated.present? ?
                            activate_account_user_path(current_user) : deactivate_account_user_path(current_user),
                        method: :patch,
                        title: "#{current_user.deactivated.present? ? 'Make Active Now' : 'Make Deactivate' }",
                        data: {toggle:'tooltip', placement:'top'},
                        class: ' btn btn-sm btn-warning float-right text-white' do %>
              <i class="fa fa-<%= current_user.deactivated.present? ? 'check-circle text-white' : 'ban text-danger' %>"> </i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>